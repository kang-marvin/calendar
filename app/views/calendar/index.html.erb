
<!-- Container -->
<div class="container">

  <!-- Date and Time Object -->
  <div class="card card-without-bottom-border">
    <div class="card-body">
      <div class="current-timestamp-div">
        <h1 class="card-title display-4"><%= @timeObject[:currentTime] %></h1>
        <h6 class="card-subtitle text-muted"><%= @timeObject[:meridiem] %></h6>
      </div>
      <div class="current-date-div">
        <p class="card-text mb-2" style="color: lightblue">
          <%= @dateObject[:day] %>,
          <%= @dateObject[:month] %> <%= @dateObject[:date] %>,
          <%= @dateObject[:year] %>
        </p>
      </div>
    </div>
  </div>

  <div class="card">
    <!-- Calender Object -->
    <div class="card-body container-fluid">
      <div class="row">
        <h3 class="col-2 card-text">
            <%= @dateObject[:month] %> <%= @dateObject[:date] %>
        </h3>
        <% (@days_of_the_week.count - 4).times do |c| %>
          <div class="col card-text"></div>
        <% end %>


        <button type="button" class="col btn calendar-forward">
          <h3> < </h3>
        </button>
        <button type="button" class="col btn calendar-backward">
            <h3> > </h3>
        </button>
      </div>

      <div class="divider-div"></div>

      <div class="row">
        <% @days_of_the_week.each do |day| %>
          <div class="card-title col card-text day-of-week"><%= day %></div>
        <% end %>
      </div>

      <% isInCurrentMonth = false %>
      <% @days_of_the_month.in_groups_of(@days_of_the_week.count).each do |week| %>
      <div class="row">
        <% week.each do |day| %>
            <% isInCurrentMonth = is_day_of_current_month(isInCurrentMonth, day) %>

            <% if isInCurrentMonth %>
              <div class="card-title col card-text day-of-week"><%= day %></div>
            <% else %>
              <div class="card-title col card-text day-of-week text-muted"><%= day %></div>
            <% end %>
          <% end %>
        </div>
      <% end %>

    </div>
  </div>
</div>